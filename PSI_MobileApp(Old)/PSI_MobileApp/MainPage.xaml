<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PSI_MobileApp.MainPage"
             Title="Home Page"
             xmlns:viewmodel="clr-namespace:PSI_MobileApp.ViewModels"
             x:DataType="viewmodel:MainPageViewModel">



    <Grid RowDefinitions="Auto, Auto, Auto, *">

        <Label Text="{Binding ViewPoint, StringFormat='Current viewpoint: {0}'}" Grid.Row="0"/>
        <Button Text="Switch perspectives" Command="{Binding SwitchPrespectivesCommand}" Grid.Row="1"/>
        <Button Text="Add User" Command="{Binding AddUserCommand}" Grid.Row="2"/>


    </Grid>


</ContentPage>
